{
  "name": "posq-restaurant-pos",
  "version": "1.0.0",
  "description": "Full Restaurant POS + QR Ordering System",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd server && npm start",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd frontend && npm test",
    "test:coverage": "npm run test:server:coverage && npm run test:client:coverage",
    "test:server:coverage": "cd server && npm run test:coverage",
    "test:client:coverage": "cd frontend && npm run test:coverage",
    "migrate": "cd server && npm run migrate",
    "seed": "cd server && npm run seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "keywords": ["pos", "restaurant", "qr", "ordering", "pwa"],
  "author": "POSQ Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}