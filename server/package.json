    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4",
    "knex": "^3.0.1",
    "sqlite3": "^5.1.6",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "stripe": "^14.9.0",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
